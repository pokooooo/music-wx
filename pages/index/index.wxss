.banner {
    height: 300rpx;
    width: 100%;
}
.banner image {
    height: 100%;
    width: 100%;
}

.nav {
    display: flex;
}

.navItem {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background: rgb(240,19,19);
    font-size: 50rpx;
    color: #fff;
    margin: 20rpx 0;
}

.navItem {
    font-size: 26rpx;
}


.recommend {
    padding: 20rpx;
}

.scroll {
    display: flex;
    height:300rpx;
}

.scrollItem {
    width: 200rpx;
    margin-right: 20rpx;
}

.scrollItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scrollItem text {
    font-size: 26rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.top {
    padding: 20rpx;
}

.musicItem {
    display: flex;
    margin-bottom: 20rpx;
}

.musicItem image {
    height: 100rpx;
    width: 100rpx;
}

.musicItem .index {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.musicItem .name {
    height: 100rpx;
    line-height: 100rpx;
}

